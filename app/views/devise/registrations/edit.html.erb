<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, label_errors: true) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.text_field(:first_name, placeholder: "first name", autocomplete: true, autofocus: true) %>
      <%= f.text_field(:last_name, placeholder: "last name", autocomplete: true) %>
      <%= f.email_field :email, placeholder: "email" %>
      <%= f.password_field(:current_password, placeholder: "current_password",autocomplete: "off") %>
      <%= f.password_field :password , placeholder: "password", help: "leave blank if you don't want to change it"%>
      <%= f.password_field :password_confirmation, label: "Confirm Password", placeholder: "confirm password", help: "leave blank if you don't want to change it" %>
      <%= f.number_field(:phone_num, placeholder: "phone number", autocomplete: "off") %>
      <%= f.submit "Update" %>
    </div>
  </div>
<% end %>


