<h2>Register</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), label_errors: true) do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.text_field :first_name, placeholder: "first name", autocomplete: true, autofocus: true  %>
      <%= f.text_field :last_name, placeholder: "last name", autocomplete: true %>
      <%= f.email_field :email, placeholder: "email" %>
      <%= f.password_field :password , placeholder: "password", help: "Must be at least 8 characters long"%>
      <%= f.password_field :password_confirmation, label: "Confirm Password", placeholder: "confirm password" %>
      <%= f.number_field(:phone_num, placeholder: "phone number", autocomplete: "off") %>
      <%= f.submit "Sign up" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
