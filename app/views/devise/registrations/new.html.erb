<h2>Register</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="row">
    <div class="col-md-6">

      <div class="form-group required">
        <%= f.label :first_name %><br />
        <%= f.text_field(:first_name,class: "form-control", placeholder: "first name", autocomplete: true, autofocus: true, :required => true) %>
      </div>

      <div class="form-group required">
        <%= f.label :last_name %><br />
        <%= f.text_field(:last_name,class: "form-control", placeholder: "last name", autocomplete: true, :required => true) %>
      </div>

      <div class="form-group required">
        <%= f.label :email %><br />
        <%= f.email_field(:email,class: "form-control", placeholder: "email", autocomplete: true, :required => true) %>
      </div>

      <div class="form-group required">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field(:password, class: "form-control", placeholder: "password", autocomplete: "off", :required => true) %>
      </div>

      <div class="form-group required">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field(:password_confirmation, class: "form-control", placeholder: "password", autocomplete: "off", :required => true) %>
      </div>

      <div class="form-group">
        <%= f.label :phone_num %><br />
        <%= f.number_field(:phone_num,class: "form-control", placeholder: "phone number", autocomplete: "off") %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-default" %>
      </div>
      
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
